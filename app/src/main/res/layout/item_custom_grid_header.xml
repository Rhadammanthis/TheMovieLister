<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_meditacion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:clickable="true"
    android:layout_margin="4dip"
    android:foreground="?selectableItemBackground"
    android:layout_centerVertical="true"
    android:layout_gravity="center_vertical"
    card_view:cardBackgroundColor="#FFF"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingBottom="8dip">

        <ImageView
            android:id="@+id/item_grid_image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dip" />

        <LinearLayout
            android:id="@+id/mtLl"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:layout_marginTop="8dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/item_grid_image"
            android:layout_marginBottom="16dip">

            <TextView
                android:text=""
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/item_grid_title" />

            <TextView
                android:text=""
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/mtDescription" />


        </LinearLayout>
        <TextView
            android:text=""
            android:layout_alignParentLeft="true"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_below="@+id/mtLl"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/mtAuthor"/>
        <TextView
            android:text=""
            android:layout_alignParentRight="true"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:layout_below="@+id/mtLl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/mtDate" />

    </RelativeLayout>


</android.support.v7.widget.CardView>