<resources>

    <!-- Base application theme. -->
    <style name="Theme.TheMovieLister" parent="Theme.TheMovieLister.Base" >
        <item name="colorAccent">@color/blue_accent</item>
    </style>

    <style name="Theme.TheMovieLister.Base" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryDark">@color/orange_primary_dark</item>
        <item name="colorAccent">@color/blue_accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.TheMovieLister.AppCompat" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryDark">@color/orange_primary_dark</item>
        <item name="colorAccent">@color/blue_accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/orange_primary</item>
        <item name="tabIndicatorColor">@color/orange_primary</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/orange_primary</item>
    </style>

</resources>
